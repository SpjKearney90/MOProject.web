
@model MOProject.ViewModels.SettingVM
@using MOProject.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "BlogDashLayout";
    ViewData["Title"] = "Settings";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Post">Go Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Settings</h4>
        </div>
        <div class="card-body">
            <form asp-action="Index" asp-controller="Setting" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-2">
                    <!-- Left Column -->
                    <div class="col-lg-9">
                        <div class="mb-3">
                            <label asp-for="SiteName" class="form-label">Site Name</label>
                            <input type="text" asp-for="SiteName" class="form-control" />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortDescription" class="form-label">Short Description</label>
                            <input asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FacebookUrl" class="form-label">Facebook URL</label>
                            <input asp-for="FacebookUrl" class="form-control" />
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Facebook Url</label>
                            <input type="text" asp-for="InstagramUrl" class="form-control" />
                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-lg-3">
                        <div class="mb-3 text-center">
                            <img src="@Url.Content(Model.ThumbnailUrl ?? "~/thumbnails/Thumbnail.png")"
                                 class="img-fluid rounded border" id="thumbnail" alt="Thumbnail" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Thumbnail" class="form-label">Thumbnail</label>
                            <input type="file" asp-for="Thumbnail" class="form-control" />
                            <span asp-validation-for="Thumbnail" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".custom-file").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0]);
                });
    </script>
}
