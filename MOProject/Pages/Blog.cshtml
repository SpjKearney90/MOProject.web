@page
@model MOProject.Pages.BlogModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog @ViewBag.Title</title>
    <link rel="stylesheet" href="./font-awesome/fontawesome.min.css">
    <link href="~/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/" rel="stylesheet" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/js/all.min.js" integrity="sha512-6sSYJqDreZRZGkJ3b+YfdhB3MzmuP9R7X1QZ6g5aIXhRvR1Y/N/P47jmnkENm7YL3oqsmI6AK+V6AD99uWDnIw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.10.2/dist/cdn.min.js" defer></script>
</head>
<body>
    <header class="relative mt-1 flex flex-col items-center justify-between px-4 pb-6 text-xl font-extrabold md:flex-row md:text-3xl">
        <!-- Left: Logo, Blog, Home, and Contact -->
        <div class="flex items-center space-x-4 md:space-x-6">
            <!-- Logo and Blog -->
            <img class="h-12 w-12 rounded-full" src="./Flower Logo .jpeg" alt="Flower Logo"> <!-- Smaller logo -->
            <h1 class="inline-block text-center text-lg md:text-2xl">My Blog</h1> <!-- Reduced text size here -->
            <!-- Home and Contact Links -->
            <a href="/Home" class="font-casual flex items-center text-sm transition hover:text-blue-500 md:text-lg">
                <span class="mr-2">
                    <i class="fas fa-home"></i>
                </span>
                Home
            </a>
            <a href="/Contact" class="font-casual flex items-center text-sm transition hover:text-blue-500 md:text-lg">
                <span class="mr-2">
                    <i class="fas fa-phone"></i>
                </span>
                Contact
            </a>
        </div>

        <div class="relative ml-auto mt-4 w-full md:w-auto md:mt-0">
            <span class="absolute inset-y-0 left-3 flex items-center text-sm text-gray-500" id="search-icon">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" class="block w-full rounded-xl border-none bg-gray-50 py-2 pl-14 pr-2 text-sm text-gray-700 focus:outline-none" />
        </div>
    </header>
    <div class="mx-auto mt-4 h-0.5 w-11/12 bg-black md:w-10/12"></div>

    <main class="bg-gray-100 pb-12 pt-12">
        <div class="container mx-auto flex flex-wrap px-4 lg:flex-nowrap">
            <!-- left sidebar -->
            <div class="hidden w-3/12 xl:block">

                <div class="mt-8 w-full rounded-sm bg-white p-4 shadow-sm">
                    <h3 class="font-roboto mb-3 text-xl font-semibold text-gray-700">Random Posts</h3>
                    <div class="space-y-4">
                        <a href="#" class="group flex">
                            <div class="flex-shrink-0">
                                <img src="src/images/img-3.jpg" class="h-14 w-20 rounded object-cover">
                            </div>
                            <div class="flex-grow pl-3">
                                <h5 class="text-md leading-5 font-roboto group-hover:text-blue-500 block font-semibold transition">
                                    California sheriff’s deputy shot during ‘ambush’
                                </h5>
                                <div class="flex items-center text-sm text-gray-400">
                                    <span class="mr-1 text-xs"><i class="far fa-clock"></i></span>
                                    Aprile 17, 2021
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="w-full lg:w-9/12 lg:mr-6 xl:w-6/12 xl:ml-6">



                <!-- big post -->
                <div class="overflow-hidden rounded-sm bg-white shadow-sm">
                    <a href="view.html" class="block overflow-hidden rounded-md">
                        <img src="./Wreath1.jpg"
                             class="h-96 w-full transform object-cover transition duration-500 hover:scale-110">
                    </a>
                    <div class="p-4 pb-5">
                        <a href="view.html">
                            <h2 class="font-roboto block text-2xl font-semibold text-gray-700 transition hover:text-blue-500">
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Iddo loremque, totam
                                architecto odit pariatur Lorem ips dolor.
                            </h2>
                        </a>

                        <p class="mt-2 text-sm text-gray-500">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Autem distinctio doloremque
                            placeat ipsa! Sequi, recusandae. In numquam similique molestiae error, magni velit suscipit
                            repudiandae itaqu....
                        </p>
                        <div class="mt-3 flex space-x-4">
                            <div class="flex items-center text-sm text-gray-400">
                                <span class="mr-2 text-xs">
                                    <i class="far fa-user"></i>
                                </span>
                                Blogging Tips
                            </div>
                            <div class="flex items-center text-sm text-gray-400">
                                <span class="mr-2 text-xs">
                                    <i class="far fa-clock"></i>
                                </span>
                                June 11, 2021
                            </div>
                        </div>
                    </div>
                </div>

                <!-- regular post -->
                <div class="grid-cols-1 mt-4 grid gap-4 md:grid-cols-2">
                    <div class="rounded-sm bg-white p-4 pb-5 shadow-sm">
                        <a href="#" class="block overflow-hidden rounded-md">
                            <img src="src/images/img-7.jpg"
                                 class="h-60 w-full transform object-cover transition duration-500 hover:scale-110">
                        </a>
                        <div class="mt-3">
                            <a href="#">
                                <h2 class="font-roboto block text-xl font-semibold text-gray-700 transition hover:text-blue-500">
                                    Lorem, ipsum dolor sit amet consec tetur adipisicing elit.
                                </h2>
                            </a>
                            <div class="mt-2 flex space-x-3">
                                <div class="flex items-center text-sm text-gray-400">
                                    <span class="mr-2 text-xs">
                                        <i class="far fa-user"></i>
                                    </span>
                                    Blogging Tips
                                </div>
                                <div class="flex items-center text-sm text-gray-400">
                                    <span class="mr-2 text-xs">
                                        <i class="far fa-clock"></i>
                                    </span>
                                    June 11, 2021
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="rounded-sm bg-white p-4 pb-5 shadow-sm">
                        <a href="#" class="block overflow-hidden rounded-md">
                            <img src="src/images/img-6.jpg"
                                 class="h-60 w-full transform object-cover transition duration-500 hover:scale-110">
                        </a>
                        <div class="mt-3">
                            <a href="#">
                                <h2 class="font-roboto block text-xl font-semibold text-gray-700 transition hover:text-blue-500">
                                    Lorem, ipsum dolor sit amet consec tetur adipisicing elit.
                                </h2>
                            </a>
                            <div class="mt-2 flex space-x-3">
                                <div class="flex items-center text-sm text-gray-400">
                                    <span class="mr-2 text-xs">
                                        <i class="far fa-user"></i>
                                    </span>
                                    Blogging Tips
                                </div>
                                <div class="flex items-center text-sm text-gray-400">
                                    <span class="mr-2 text-xs">
                                        <i class="far fa-clock"></i>
                                    </span>
                                    June 11, 2021
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>

            <!-- right sidebar -->
            <div class="mt-8 w-full lg:w-3/12 lg:mt-0">
                <!-- Social plugin -->
                <div class="w-full rounded-sm bg-white p-4 shadow-sm">
                    <h3 class="font-roboto mb-3 text-xl font-semibold text-gray-700">Social Plugin</h3>
                    <div class="flex gap-2">
                        <a href="#"
                           class="flex h-8 w-8 items-center justify-center rounded-sm border border-gray-400 text-base text-gray-800">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#"
                           class="flex h-8 w-8 items-center justify-center rounded-sm border border-gray-400 text-base text-gray-800">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#"
                           class="flex h-8 w-8 items-center justify-center rounded-sm border border-gray-400 text-base text-gray-800">
                            <i class="fab fa-pinterest-p"></i>
                        </a>

                    </div>
                </div>

                <!-- Popular posts -->
                <div class="mt-8 w-full rounded-sm bg-white p-4 shadow-sm">
                    <h3 class="font-roboto mb-3 text-xl font-semibold text-gray-700">Popular Posts</h3>
                    <div class="space-y-4">
                        <a href="#" class="group flex">
                            <div class="flex-shrink-0">
                                <img src="src/images/img-5.jpg" class="h-14 w-20 rounded object-cover lg:w-14 xl:w-20">
                            </div>
                            <div class="flex-grow pl-3">
                                <h5 class="text-md leading-5 font-roboto group-hover:text-blue-500 block font-semibold transition">
                                    Team Bitbose geared up to attend Blockchain
                                </h5>
                                <div class="flex items-center text-sm text-gray-400">
                                    <span class="mr-1 text-xs"><i class="far fa-clock"></i></span>
                                    June 11, 2021
                                </div>
                            </div>
                        </a>


                    </div>
                </div>


            </div>

        </div>
    </main>

    <!-- mobile menu -->
    <div class="z-10 opacity-0 invisible fixed left-0 top-0 h-full w-full bg-black bg-opacity-25 transition-all duration-500 xl:hidden" id="sidebar_wrapper">
        <div class="z-10 fixed -left-80 top-0 flex h-full w-72 flex-col bg-white shadow-md transition-all duration-500" id="sidebar">

            <!-- search and menu -->
            <div class="lg:hidden">
                <!-- searchbar -->
                <div class="relative mx-3 mt-3 shadow-sm">
                    <span class="absolute left-3 top-2 text-sm text-gray-500">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text"
                           class="block w-full rounded-3xl border-none bg-gray-50 py-2 pl-11 pr-2 text-sm text-gray-700 placeholder-gray-500 shadow-sm focus:outline-none"
                           placeholder="Search">
                </div>

                <!-- navlink -->
                <h3 class="font-roboto mb-1 pl-3 pt-3 text-xl font-semibold text-gray-700">Menu</h3>
                <div class="">
                    <a href="index.html"
                       class="flex items-center px-4 py-1 text-sm font-semibold uppercase transition hover:text-blue-500">
                        <span class="w-6">
                            <i class="fas fa-home"></i>
                        </span>
                        Home
                    </a>
                    <a href="#"
                       class="flex items-center px-4 py-1 text-sm font-semibold uppercase transition hover:text-blue-500">
                        <span class="w-6">
                            <i class="far fa-file-alt"></i>
                        </span>
                        About
                    </a>
                    <a href="#"
                       class="flex items-center px-4 py-1 text-sm font-semibold uppercase transition hover:text-blue-500">
                        <span class="w-6">
                            <i class="fas fa-phone"></i>
                        </span>
                        Contact
                    </a>
                </div>
                <!-- navlinks end -->
            </div>

            <!-- footer -->
            <footer class="border-t py-4">
                <p class="text-center text-sm">
                    Copyright © 2021 <span class="font-semibold">Programming Kit</span>
                    All Rights Reserved
                </p>
            </footer>
</body>
</html>
