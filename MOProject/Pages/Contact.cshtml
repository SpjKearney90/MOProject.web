@page
@model MOProject.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow p-4" style="width: 100%; max-width: 600px;">
        <h3 class="card-title text-center mb-4">For More Information please contact</h3>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
        }
           @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success text-center" id="success-message">
                    @Model.SuccessMessage
                </div>

                <script>
                    setTimeout(function () {
                        window.location.href = '/'; // Adjust this if your homepage is at a different route
                    }, 3000);
                </script>
            }

        <form method="post">
            <div class="mb-3">
                <label asp-for="ContactForm.Name" class="form-label"></label>
                <input asp-for="ContactForm.Name" class="form-control" />
                <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ContactForm.Email" class="form-label"></label>
                <input asp-for="ContactForm.Email" class="form-control" />
                <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ContactForm.Phone" class="form-label"></label>
                <input asp-for="ContactForm.Phone" class="form-control" />
                <span asp-validation-for="ContactForm.Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ContactForm.Message" class="form-label"></label>
                <textarea asp-for="ContactForm.Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-50">Send Message</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
